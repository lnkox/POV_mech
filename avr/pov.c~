#include <mega8.h>
 #include <delay.h>  
 #include <sleep.h> 
char n_pic=1;
int zdvug=0;
char ready=0;  
int tmr_int;
int vzdvug;
int old_int;
int dif_int;
int tmr_int2;
int tmr_line;
int curent_line;
int cnt_line=361;
int tmr_to_sleep=0;
int max_line=250;
void set_led_state(char a,char b,char c)
{
    PORTC.5=!(a & 0B00000001);// 1
    PORTC.4=!(a & 0B00000010);// 2 
    PORTC.3=!(a & 0B00000100);// 3 
    PORTC.2=!(a & 0B00001000);// 4 
    PORTC.1=!(a & 0B00010000);// 5 
    PORTC.0=!(a & 0B00100000);// 6 
    PORTB.2=!(a & 0B01000000);// 7 
    PORTB.1=!(a & 0B10000000);// 8
    PORTB.3=!(b & 0B00000001);// 9
    PORTB.4=!(b & 0B00000010);// 10 
    PORTB.5=!(b & 0B00000100);// 11 
    PORTB.0=!(b & 0B00001000);// 12 
    PORTD.7=!(b & 0B00010000);// 13 
    PORTD.6=!(b & 0B00100000);// 14 
    PORTD.5=!(b & 0B01000000);// 15 
    PORTB.7=!(b & 0B10000000);// 16
    PORTB.6=!(c & 0B00000001);// 17
    PORTD.4=!(c & 0B00000010);// 18 
    PORTD.1=!(c & 0B00000100);// 19 
    PORTD.0=!(c & 0B00001000);// 20 
             
}
// External Interrupt 0 service routine
interrupt [EXT_INT0] void ext_int0_isr(void)
{
sleep_disable(); 
MCUCR=0x00;


    tmr_int2 = TCNT1L | TCNT1H << 8; 
    TCNT1H=0x00;
    TCNT1L=0x00;
   PORTB=255;
   PORTC=255;
   PORTD=255; 
   ready=0;
    if (tmr_int2>1000)
    {  
        dif_int=tmr_int2-old_int;
        old_int=tmr_int2;
        zdvug=zdvug+2;
        
        if (zdvug>max_line)
        {
            zdvug=0; 
            n_pic++;
            if (n_pic==5){n_pic=1;}
        }
        vzdvug=zdvug/30;
        vzdvug=vzdvug*30;
        tmr_line=(tmr_int2-dif_int)/max_line; 
        if (tmr_to_sleep<1)
        {
            curent_line=vzdvug; 
            //curent_line=0;
            cnt_line=0;
        }
        tmr_to_sleep=0; 
    }

}

// External Interrupt 1 service routine
interrupt [EXT_INT1] void ext_int1_isr(void)
{
// Place your code here
n_pic++;
if (n_pic==5){n_pic=1;}
delay_ms(100);
set_led_state(n_pic,0,0);
delay_ms(100);
set_led_state(0,0,0);
delay_ms(100);
set_led_state(n_pic,0,0);
delay_ms(100);
set_led_state(0,0,0);     
}



// Timer1 overflow interrupt service routine
interrupt [TIM1_OVF] void timer1_ovf_isr(void)
{
tmr_to_sleep++;
if (tmr_to_sleep==1) {set_led_state(255,0,0);}
if (tmr_to_sleep==2) {set_led_state(255,255,0);}
if (tmr_to_sleep==3) {set_led_state(255,255,255);}
delay_ms(300);
if (tmr_to_sleep>3){

// Place your code here
   set_led_state(255,255,255);
   delay_ms(50);  
   set_led_state(0,0,0);;
   delay_ms(50); 
      set_led_state(255,255,255);
   delay_ms(50);  
   set_led_state(0,0,0);
   delay_ms(50);
      set_led_state(255,255,255);
   delay_ms(50);  
   set_led_state(0,0,0);
   delay_ms(50);
   PORTB=255;
   PORTC=255;
   PORTD=255;
sleep_enable(); //Разрешение на спящий режим 
//idle(); 
powerdown(); //Самый экономный режим энергосбережения 
#asm("sleep"); //Отправляем контроллер в спящий режим
} 
}

